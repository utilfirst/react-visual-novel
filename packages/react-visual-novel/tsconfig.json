{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": false,
    "importsNotUsedAsValues": "remove",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "module": "ES2020",
    "moduleResolution": "Node",
    "noEmit": true,
    "target": "ES2020"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
